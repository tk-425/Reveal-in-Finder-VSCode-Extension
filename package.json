{
  "name": "reveal-in-finder",
  "displayName": "Reveal-in-Finder",
  "description": "Open containing folder in system file manager (Finder/Explorer/Nautilus)",
  "publisher": "wtk49",
  "repository": {
    "type": "git",
    "url": "https://github.com/tk-425/Reveal-in-Finder-VSCode-Extension"
  },
  "keywords": [
    "finder",
    "explorer",
    "file manager",
    "windows",
    "mac",
    "linux"
  ],
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:file"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reveal-in-finder.openFilePath",
        "title": "RIF: Open Current File Path",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "reveal-in-finder.openFilePath",
          "group": "navigation@1",
          "icon": "$(folder-opened)"
        }
      ],
      "explorer/context": [
        {
          "command": "reveal-in-finder.openFilePath",
          "when": "explorerResourceIsFile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "pkg": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
